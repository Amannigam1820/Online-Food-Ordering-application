<section class="status">
    <div class="container mx-auto">
        <div class=" status-box w-full lg:w-2/3 mx-auto">
            <div class="flex items-center justify-between mb-12">
                <h1 class="text-xl font-bold ">Track Order</h1>
                <h5 class="bg-gray py-1 rounded-full px-4 text-black text-xs">order id :- <%=order._id%></h5>
                <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order) %>">
            </div>
            <ul>
                <li class="status-line text-sm md:text-xl pb-12" data-status="order_placed"><span>Order Placed</span></li>
                <li class="status-line text-sm md:text-xl pb-12" data-status="confirmed"><span>Order Confirmed</span></li>
                <li class="status-line text-sm md:text-xl pb-12" data-status="prepared"><span>Prepared</span></li>
                <li class="status-line text-sm md:text-xl pb-12" data-status="delivered"><span>Out for delivery</span></li>
                <li class="status-line text-sm md:text-xl" data-status="completed"><span>Delivered</span></li>
               
            </ul>
        </div>

    </div>

</section>